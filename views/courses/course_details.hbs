<section class="meetings-page" id="meetings">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <div class="meeting-single-item">
              <div class="thumb">
                <div class="price">
                  <span>${{course._price}}</span>
                </div>

                <a href="course_details"><img src="{{course._image}}"
                    alt="https://admissions.vnu.edu.vn/assets/uploads/files/News/af81e-2.png"></a>
              </div>
              <div class="down-content">
                <h4>{{course._name}}</h4>
                <div style="font-style: italic;"><i class="fa fa-eye"></i> {{course._views}} Views</div>
                <p>{{course._room}}</p>
                <p class="description">
                  {{course._description}}
                </p>

              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="row">
              <div class="main-button-red col-lg-6">
                <a href="/courses">Back To Courses List</a>
              </div>
              <div class="col-lg-6">
                <div class="main-button-red">
                  <a href="/courses/{{course._course_ID}}/class">View Available Classes</a>
                </div>
              </div>
            </div>



            <!-- comments container -->



          </div>

        </div>
      </div>
    </div>
    <div class="row">
      <div class="comment_container">
        <div class="comment_block">


          <!-- used by #{user} to create a new comment -->
          <div class="create_new_comment">

            <!-- current #{user} avatar -->
            <div class="user_avatar">
              {{#if student}}
                  <img src={{student._avatar}}>
              {{else}}
                   <img src="https://www.marketingmuses.com/wp-content/uploads/2018/01/invis-user.png">
              {{/if}}
             
            </div><!-- the input field -->
            <div class="input_comment">
              <input type="text" placeholder="Join the conversation..">
            </div>
            <button class="btn btn-primary" style="margin-left: 10px;">Comment</button>

          </div>


          <!-- new comment -->
          {{#each comments}}
          <div class="new_comment">

            <!-- build comment -->
            <ul class="user_comment">

              <!-- current #{user} avatar -->

              <!-- the comment body -->
              <div class="infor">
                <div class="user_avatar">
                  
                  <img src={{this.[Student.User._avatar]}}>
                </div>
                <div class="username">{{this.[Student.User._firstName]}} {{this.[Student.User._lastName]}}</div>
              </div>
              <div class="comment_body">
                <p>{{this._content}}</p>
              </div>

              <!-- comments toolbar -->
              <div class="comment_toolbar">

                <!-- inc. date and time -->
                <div class="comment_details">
                  <ul>
                   
                    <li><i class="fa fa-calendar"></i> {{this._create_At}}</li>
                  </ul>
                </div><!-- inc. share/reply and love -->


              </div>



            </ul>

          </div>
          {{/each}}



        </div>
      </div>

    </div>
  </div>

</section>