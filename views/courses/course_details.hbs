<link rel="stylesheet" href="/assets/css/templatemo-edu-meeting.css">
<link rel="stylesheet" href="/assets/css/owl.css">
<link rel="stylesheet" href="/assets/css/lightbox.css">
<script src="assets/js/isotope.js"></script>
<script src="assets/js/isotope.min.js"></script>
<script src="assets/js/custom.js"></script>


<section class="meetings-page" id="meetings">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <div class="meeting-single-item">
              <div class="thumb">
                <div class="price">
                  <span>${{course._price}}</span>
                </div>
                
                  <a href="course_details"><img src="{{course._image}}" alt="https://admissions.vnu.edu.vn/assets/uploads/files/News/af81e-2.png"></a>
              
                

                
                
              </div>
              <div class="down-content">
                <a href="/course_details">
                  <h4>{{course._name}}</h4>
                </a>
                <p>{{course._room}}</p>
                 <h3>Description</h3>
                <p class="description">
                 
                  {{course._description}}
                </p>
                
              </div>
            </div>
          </div>
         
              <div class="col-lg-12">
              <div class="main-button-red">
                <a href="/courses">Back To Courses List</a>
              </div>
              <div class="col-lg-12">
              <div class="main-button-red">
                <a href="/courses/{{course._course_ID}}/class">View Available Classes</a>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>