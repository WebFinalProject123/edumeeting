<form >
<section class="meetings-page" id="meetings">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <form class="d-flex" style="margin-bottom: 5%;" >
              <input class="form-control me-2" name="search" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
          <div class="col-lg-12">
            <div class="filters">
              <ul>
                <li class="filter-item"><a href="/courses">All courses</a></li>
                <li class="filter-item"><a href="?type=Beginer">For Beginer</a></li>
                <li class="filter-item"><a href="?type=Medium">Medium</a></li>
                <li class="filter-item"><a href="?type=Advance">Advance</a></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="row grid">
              {{#each course}}
              <div class="col-lg-4 templatemo-item-col all soon">
                <div class="meeting-item">
                  <div class="thumb">
                    <div class="price">
                      <span>$ {{this._price}}</span>
                    </div>
                    <a href="/course_details/{{this._course_ID}}"  ><img src="{{this._image}}" ></a>
                  </div>
                  <div class="down-content">
                   
                    <a href="/course_details/{{this._course_ID}}">
                      <h4>{{this._name}}</h4>
                    </a>
                    <p>{{this._brief_description}}</p>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          <div class="col-lg-12">
            <div class="pagination pagination-centered">
              <ul>
                {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}">Prev</a></li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="5"}}
                <li {{#if active}}class="active" {{/if}}><a href="?p={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}">Next</a></li>
                {{/paginate}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>
</form>
<script>
  var filter_items=document.getElementsByClassName('filter-item')
  for (int i=0; i<filter_items.length;i++){
    filter_items[i].addEventListener("click",function(){
      var current = filter_items.getElementsByClassName("active");
      current[1].classList.remove("active");
      this.classList.add("active")
    })
  }
</script>