

<!-- Additional CSS Files -->
<link rel="stylesheet" href="/assets/css/fontawesome.css">
<link rel="stylesheet" href="/assets/css/templatemo-edu-meeting.css">
<link rel="stylesheet" href="/assets/css/owl.css">
<link rel="stylesheet" href="/assets/css/lightbox.css">
<script src="assets/js/isotope.min.js"></script>

<!-- ***** Main Banner Area Start ***** -->
<section class="section main-banner" id="top" data-section="section1">
  <img src="/assets/images/heading-bg.jpg" id="bg-video">

  <div class="video-overlay header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="caption">
            <h6>Hello Students</h6>
            <h2>Welcome to Education, here are our course</h2>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="meetings-page" id="meetings">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <div class="filters">
              <ul>
                <li data-filter="*" class="active">All Meetings</li>
                <li data-filter=".soon">Soon</li>
                <li data-filter=".imp">Important</li>
                <li data-filter=".att">Attractive</li>
              </ul>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="row grid">
              {{#each course}}
              <div class="col-lg-4 templatemo-item-col all soon">
                <div class="meeting-item">
                  <div class="thumb">
                    <div class="price">
                      <span>$ {{this._price}}</span>
                    </div>
                    <div class="img_class">
                      <a href="/course_details/{{this._course_ID}}"><img src="{{this._image}}"></a>
                    </div>
                  </div>
                  <div class="down-content">

                    <a href="/course_details/{{this._course_ID}}">
                      <h4>{{this._name}}</h4>
                    </a>
                    <p>{{this._brief_description}}</p>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          <div class="col-lg-12">
            <div class="pagination pagination-centered">
              <ul>
                {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}">Prev</a></li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="5"}}
                <li {{#if active}}class="active" {{/if}}><a href="?p={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}">Next</a></li>
                {{/paginate}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>