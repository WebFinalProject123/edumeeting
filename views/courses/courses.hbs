<!-- ***** Main Banner Area Start ***** -->
  <section class="section main-banner" id="top" data-section="section1">
      <img src="/assets/images/heading-bg.jpg" id="bg-video">

      <div class="video-overlay header-text">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <div class="caption">
              <h6>Hello Students</h6>
              <h2>Welcome to Education, here are our course</h2>
              
              
          </div>
              </div>
            </div>
          </div>
      </div>
