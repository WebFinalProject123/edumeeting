<section class="heading-page header-text" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <h6>Error</h6>
                <h2>Sorry for this problem. Could you try it again!</h2>

            </div>
        </div>
    </div>
</section>

<section class="meetings-page" id="meetings">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h1 style="font-weight: bold;">{{message}}: {{error.status}}</h1>
                            </div>
                            <div class="card-body">
                                <pre>{{error.stack}}</pre>
                            </div>
                            <div class="card-footer">
                                <a href="#">
                                    <div class="d-grid gap-2 col-2 mx-auto">
                                        <button class="btn btn-danger">
                                            Try again
                                        </button>
                                    </div>

                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>