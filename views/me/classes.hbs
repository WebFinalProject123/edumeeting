<section class="meetings-page" id="meetings">
  <div class="container">
    <div class="row">
      <div class="section-heading" style="margin-top: 100px;">
        <h2>Registered Classes </h2>
      </div>
    </div>

    <div class="col-lg-12">
      <div class="row grid">
        {{#each registeredClasses}}
        <div class="col-lg-4 templatemo-item-col all soon">
          <div class="meeting-item">
            <div class="thumb">
              <a href="/course_details/{{this._course_ID}}"><img src={{this.[Course._image]}} alt=""></a>
            </div>
            <div class="down-content">

              <h4>Class: {{this._className}}</h4>
              <p>Teacher: {{this.[Teacher.User._firstName]}} {{this.[Teacher.User._lastName]}}</p>
              <p>Start on: {{this._startDate}}</p>
              <p>End on: {{this._endDate}}</p>
              <p>1st Lesson: {{this.[Schedule1._dayOfWeek]}}:
                {{this.[Schedule1._startHour]}}-{{this.[Schedule1._endHour]}}</p>
              <p>2nd Lesson: {{this.[Schedule2._dayOfWeek]}}:
                {{this.[Schedule2._startHour]}}-{{this.[Schedule2._endHour]}}</p>
              <p>End on: {{this._endDate}}</p>
              <p>At room: {{this._room}}</p>
              <p>Number of lesson: {{this._numberOfLesson}}</p>
              <p>Current size: {{this._currentNumber}}/{{this._maxNumber}}</p>

              <div class="col-lg-12">
                <div class="main-button-red">
                  <a href='/me/cancel_registration/{{this._class_ID}}'>Cancel</a>
                </div>
              </div>
            </div>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
