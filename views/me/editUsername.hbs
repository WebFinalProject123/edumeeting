<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
<section class="heading-page header-text" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <h6>Hello {{student.firstName}} {{student.lastName}}</h6>
                <h2>Edit your Information</h2>
            </div>
        </div>
    </div>
</section>
<section class="meetings-page" id="meetings">
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <img src="{{student.avatar}}" class="rounded-circle" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">

                    <div class="card h-100">
                        <form action="/me/edit/username" method="post">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="mb-3">
                                         <div class="form-text" style="color: red;">{{#if wrongUsername}}New username was
                                            exitsted{{/if}}</div>
                                        <label for="exampleInputEmail1" class="form-label">Your Username <span
                                                style="color: red;">*</span></label>
                                        <input type="text" class="form-control" id="exampleInputEmail1"
                                            aria-describedby="emailHelp" name="username" required>

                                    </div>
                                    <div class="mb-3">
                                        <div class="form-text" style="color: red;">{{#if wrong}}Your old password was
                                            wrong{{/if}}</div>
                                        <label for="exampleInputPassword1" class="form-label">Your Password <span
                                                style="color: red;">*</span></label>
                                        <input type="password" class="form-control" id="exampleInputPassword1"
                                            name="password" required>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <div class="d-grid gap-2 col-3 mx-auto">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>

</section>